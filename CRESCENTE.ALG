Algoritmo "crescente"

Var
   x, y : inteiro

Inicio
     x <- 1
     y <- 2
     
     enquanto x <> y faca
     escreval("Digite dois numeros:")
     leia(x)
     leia(y)
          se X < Y entao
             escreval("CRESCENTE!")
          senao
             escreval("DECRESCENTE!")
          fimse
     fimenquanto

Fimalgoritmo